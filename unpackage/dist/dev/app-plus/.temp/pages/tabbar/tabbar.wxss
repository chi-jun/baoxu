
page {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.index {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  overflow-x: hidden;
  overflow-y: auto;
  background: #DCDCDC;
}
.index-bd {
  width: 750rpx;
  height: 100%;
}
.swiper-tab {
  border-top: 2rpx solid #EFEFF4;
  background: white;
  width: 100%;
  white-space: nowrap;
  line-height: 64rpx;
}
.swiper-tab-list {
  font-size: 36rpx;
  width: 150rpx;
  display: inline-block;
  text-align: center;
  color: #777777;
}
.on {
  color: #6492FF;
  border-bottom: 5rpx solid #6492FF;
}
.swiper-box {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
  background: white;
}
.swiper-box view {
  text-align: center;
}
.tab-list {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: left;
  border-bottom: 2rpx solid #EFEFF4;
}