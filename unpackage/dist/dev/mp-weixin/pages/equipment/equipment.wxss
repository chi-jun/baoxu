
page {
  width: 100%;
  height: 100%;
}
.container {
  position: relative;
  padding-top: 30rpx;
  border-top: 1rpx solid #CCCCCC;
}
.group {
  margin-left: 30rpx;
}
.designate:nth-child(1) .group {
  margin-left: 0;
}
.designate:nth-child(1) .group radio {
  margin-left: 40rpx;
}
.label-2 {
  border-top: 1rpx solid #E5E5E5;
  line-height: 80rpx;
}
.label-2-text {
  margin-left: 20rpx;
  font-size: 36rpx;
}
radio {
  margin-left: 10rpx;
}
.button {
  position: absolute;
  right: 30rpx;
  margin-top: 20rpx;
  overflow: hidden;
}
.mini-btn {
  background: #6492FF;
  color: white;
}
.button-hover ._button {
  background: #007AFF;
}
._button {
  float: right;
}