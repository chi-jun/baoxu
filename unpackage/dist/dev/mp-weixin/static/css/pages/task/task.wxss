
.container {
  display: block;
  width: 100%;
}
.task-info {
  display: block;
}
.info-container {
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
}
.task-item {
  background: white;
  padding: 16rpx 0 16rpx 16rpx;
  font-weight: 100;
  border-bottom: 20rpx solid #EAEAEA;
}
.task-item:last-child {
  border-bottom: none;
}
.link-item {
  background-image: url(data:image/png;base64,);
  background-size: 30rpx;
  background-repeat: no-repeat;
  background-position: 97% center;
  background-position: -webkit-calc(100% - 20rpx) center;
  background-position: calc(100% - 20rpx) center;
}
.task-school {
  height: 68rpx;
  line-height: 68rpx;
  border-bottom: 1rpx solid gainsboro;
  border-top: 1rpx solid gainsboro;
  display: block;
}
.task-container {
  display: flex;
  border-bottom: 1rpx dashed #AEAEAE;
  overflow: hidden;
}
.task-info {
  flex: 1;
}
.task-status-inner {
  padding-top: 25rpx;
}
.task-status-container {
  width: 160rpx;
  text-align: center;
}
.task-status {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  text-align: center;
  margin: 0 auto;
}
.status-doing {
  border: 1rpx solid #6492FF;
  color: #6492FF;
}
.status-finish {
  border: 1rpx solid #27E1BA;
  color: #27E1BA;
}
.info-title {
  color: rgba( 0, 0, 0, 0.5);
  font-size: 30rpx;
}
.info-desc {
  flex: 1;
  font-size: 30rpx;
}